   <main>
        <form method="post" asp-page-handler="Login">
            <div class="form-container">
                <div class="image-container">
                    <img src="~/imagenes/lotrasblanc.png" alt="Logo" />
                </div>
                <div class="fields-container">
                    <h2 class="login-title">INICIAR SESIÓN</h2>

                    <input type="text" name="Usuario" placeholder="Usuario" class="form-control mb-3">
                    <input type="password" name="Clave" placeholder="Contraseña" class="form-control">

                    <input type="submit" value="INGRESAR" class="btn btn-primary">
                    <div class="text-center">
                        <p><a href="#" class="alt-form" onclick="recuperarContraseña()">¿Olvidaste tu contraseña?</a></p>
                    </div>
                </div>
            </div>
        </form>

        <div class="form-group Form__group">
            <div class="col-sm-12" style="text-align: center">
                @if (!string.IsNullOrEmpty(Model.ltMensaje))
                {
                    <div>@Html.Raw(Model.ltMensaje)</div>
                }
            </div>
        </div>

    </main>

